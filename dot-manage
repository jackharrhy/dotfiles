#!/bin/bash

function arch() {
	cp ./doit ~/doit
	cat ./zsh/zshrc-arch ./zsh/zshrc-base > ~/.zshrc
}

function popos() {
	cat ./zsh/zshrc-popos ./zsh/zshrc-base > ~/.zshrc
}

function ubuntu() {
	cat ./zsh/zshrc-ubuntu ./zsh/zshrc-base > ~/.zshrc
}

function macos() {
	cat ./bash/bashrc-macos ./bash/bashrc-universal > ~/.bash_profile
}

function gui() {
	sourceCodeProFiles=$(fc-list | grep -i "Source Code Pro")
	if [ -z sourceCodeProFiles ]; then
		echo "The font \"Source Code Pro\" is not currently installed"
		cat ./gui/xdefaults-base ./gui/xdefaults-defaultfont > ~/.Xdefaults
	else
		cat ./gui/xdefaults-base ./gui/xdefaults-sourcecodepro > ~/.Xdefaults
	fi
}

function i3multimon() {
	cat ./gui/i3config-base ./gui/i3config-multimon > ~/.config/i3/config
}
function i3() {
	cp ./gui/i3config-base ~/.config/i3/config
}

function universal() {
	cp ./term/tmux ~/.tmux.conf
	cp ./term/vimrc ~/.vimrc
}

function inform() {
	echo ""
	echo " Choices:"
	echo "  1 - arch"
	echo "  2 - arch-multimon"
	echo ""
	echo "  3 - ubuntu"
	echo "  4 - ubuntu-nogui"
	echo ""
	echo "  5 - pop-os"
	echo ""
	echo "  6 - macos"
	echo ""
}

if [ $1 ]; then
	case $1 in
		1)
			arch
			gui
			i3
			universal
			;;
		2)
			arch
			gui
			i3multimon
			universal
			;;

		3)
			ubuntu
			gui
			i3
			universal
			;;
		4)
			ubuntu
			universal
			;;

		5)
			popos
                        gui
			universal
			;;

		6)
			macos
			universal
			;;

		*)
			inform
	esac

else
	inform
fi
