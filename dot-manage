#!/bin/bash

function arch() {
	cp ./doit ~/doit
	cat ./zsh/zshrc-arch ./zsh/zshrc > ~/.zshrc
}

function ubuntu() {
	cat ./zsh/zshrc-ubuntu ./zsh/zshrc > ~/.zshrc
}

function gui() {
	cp ./gui/xdefaults ~/.Xdefaults
	cp ./gui/i3config ~/.config/i3/config
}

function universal() {
	cp ./term/tmux ~/.tmux.conf
	cp ./term/vimrc ~/.vimrc
}

function inform() {
	echo "  arch"
	echo ""
	echo "  ubuntu"
	echo "  ubuntu-nogui"
}

if [ $1 ]; then
	case $1 in
		arch)
			arch
			gui
			universal
			;;
		ubuntu)
			ubuntu
			gui
			universal
			;;
		ubuntu-nogui)
			ubuntu
			universal
			;;

		*)
			inform
	esac

else
	inform
fi
