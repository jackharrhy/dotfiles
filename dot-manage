#!/bin/bash
#
# ACCOUNTS FOR
#  bashrc-arch
#  bashrc-ubuntu
#  bashrc-universal
#
#  vimrc
#  tmux.conf
#
#  autostart
#  xdefaults
#
#  doit

function arch() {
	cat ./bashrc-arch ./bashrc-universal > ~/.bashrc
	cat ./doit > ~/doit
}

function ubuntu() {
	cat ./bashrc-ubuntu ./bashrc-universal > ~/.bashrc
}

function gui() {
	cat autostart > ~/.config/herbstluftwm/autostart
	cat xdefaults > ~/.Xdefaults
}

function universal() {
	cat vimrc > ~/.vimrc
	cat tmux.conf > ~/.tmux.conf
}

function inform() {
	echo '  replace-arch'
	echo '  replace-ubuntu'
	echo '  replace-ubuntu-nogui'
}

if [ $1 ]; then
	case $1 in
		replace-arch)
			arch
			gui
			universal
			;;

		replace-ubuntu)
			ubuntu
			gui
			universal
			;;

		replace-ubuntu-nogui)
			ubuntu
			universal
			;;

		*)
			inform
	esac

else
	inform
fi
